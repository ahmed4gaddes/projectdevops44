pipeline {
    agent any
    
    // Nous avons supprimé le bloc "tools" ici pour forcer l'utilisation de Java 17 du système
    
    stages {
        stage('GIT') {
            steps {
                echo "Getting Project from Git"
                git branch: 'main', url: 'https://github.com/ahmed4gaddes/projectdevops44.git'
            }
        }
        
        stage('MVN CLEAN') {
            steps {
                sh 'mvn clean'
            }
        }
        
        stage('MVN COMPILE') {
            steps {
                sh 'mvn compile'
            }
        }
        
        stage('MVN SONARQUBE') {
            steps {
                withSonarQubeEnv('sonarqube') {
                    sh 'mvn sonar:sonar -Dsonar.projectKey=esprit-market'
                }
            }
        }
    }
}
